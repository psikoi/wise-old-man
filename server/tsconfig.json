{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "target": "es6",
        "sourceMap": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "types": [
            "node"
        ],
        "lib": [
            "esnext"
        ]
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}